# bash aliases
if [ -f ~/.bash_aliases ]; then
    source ~/.bash_aliases
fi


# environment variables
{% for item in account_env_vars[item.user] | default([]) %}
export {{ item.name | upper }}="{{ item.value }}"
{% endfor %}

{% for item in item.env_vars | default([]) %}
export {{ item.name | upper }}="{{ item.value }}"
{% endfor %}

